@{
    Layout = "_Layout";
} 
<section class="bg-primary" id="logon"  style="height:100%">
    <div class="container">
       
     <div class="form-group">
         <div class="row">
             <div class="col-lg-8 mx-auto text-center">
                 <h2 class="section-heading text-white">Login | เข้าสู่ระบบ</h2>
                 <hr class="light my-3">
                 @*<p class="text-faded mb-4">Start Bootstrap has everything you need to get your new website up and running in no time! All of the templates and themes on Start Bootstrap are open source, free to download, and easy to use. No strings attached!</p>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Get Started!</a>*@
             </div>

         </div>
     </div>
        @{ Html.BeginForm("signin","Home",FormMethod.Post);}
      <div class="form-group">
          <div class="row">
              <div class="col-lg-4 text-right">
                  Username :
              </div>
              <div class="col-lg-4">
                  @Html.TextBox("username", "", new { @class = "form-control" })
              </div>

          </div>
      </div>
       <div class="form-group">
           <div class="row">
               <div class="col-lg-4 text-right">
                   Password :
               </div>
               <div class="col-lg-4">
                   @Html.TextBox("password", "", new { @class = "form-control", @type="password" })
               </div>

           </div>
       </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-warning btn-lg">เข้าสู่ระบบ</button>
                 
                </div>
            </div>
        </div> 
        @{ Html.EndForm();}
    </div> 
   
</section>


 
