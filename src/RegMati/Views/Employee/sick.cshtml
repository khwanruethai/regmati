<script>

  $(document).ready(function() {

      $('#calendar').fullCalendar({
          defaultDate: "2018-9-1",
          editable: false, // false or true
          eventLimit: true, // allow "more" link when too many events
          lang: 'th'
      });

  });

</script>
<script>
    $(document).on('click', '.smdata', function () {

        swal('Warning','ข้อมูลถูกต้องแล้วใช่หรือไม่ หากถูกต้องแล้ว กรุณากดยืนยันเพื่อส่งคำร้องขอไปยังหัวหน้าแผนก','warning');

    })
</script>
<script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();


                reader.onload = function(e) {
                    $('#viewfile').attr('href', e.target.result);

                    //alert(e.target.result);
                }

                reader.readAsDataURL(input.files[0]);

            }


        }
        $("#selectFile").change(function () {
            readURL(this);
             

        });
</script> 
