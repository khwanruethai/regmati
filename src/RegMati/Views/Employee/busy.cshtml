@{

    Layout = "_Layout_User";
}
<link href='~/fullcalendar-3.9.0/fullcalendar.min.css' rel='stylesheet' />
<link href='~/fullcalendar-3.9.0/fullcalendar.print.min.css' rel='stylesheet' media='print' />
<script src='~/fullcalendar-3.9.0/lib/moment.min.js'></script>
<style>
    #calendar {
        /*max-width: 900px;
        margin: 0 auto;*/
        /*width: 100%;*/
        font-size: 12px;
    }

    .fc-event {
        position: relative;
        display: block;
        font-size: 12px;
        line-height: 1.3;
    }

    .fc-unthemed td.fc-today {
        background: #dc6a16;
    }

    .fc td, .fc th {
        border-style: solid;
        border-width: 1px;
        padding: 0;
        vertical-align: top;
        background-color: mediumseagreen;
    }
</style>
<section class="content-header">
    <div class="row">
        <h1>ลากิจ</h1>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-info box-solid">
                            <div class="box-body">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4>แบบยื่นคำร้องของ ลากิจ</h4>
                                            <hr />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            เรียน
                                        </div>
                                        <div class="col-md-10">
                                            @Html.TextBox("send", "", new { @class = "form-control", @readonly = true })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            เรื่อง
                                        </div>
                                        <div class="col-md-10">
                                            @Html.TextBox("title", "ลากิจ", new { @class = "form-control", @readonly = true })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            เนื่องจาก<span class="text-red">*</span>
                                        </div>
                                        <div class="col-md-10">
                                            @Html.TextBox("title", " ", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            ตั้งแต่วันที่<span class="text-red">*</span>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.TextBox("title", " ", new { @class = "form-control datepicker" })
                                        </div>
                                        <div class="col-md-1">
                                            เวลา<span class="text-red">*</span>
                                        </div>
                                        <div class="col-md-2">
                                            @Html.TextBox("title", " ", new { @class = "form-control" })
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            ถึงวันที่<span class="text-red">*</span>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.TextBox("title", " ", new { @class = "form-control datepicker" })
                                        </div>
                                        <div class="col-md-1">
                                            เวลา<span class="text-red">*</span>
                                        </div>
                                        <div class="col-md-2">
                                            @Html.TextBox("title", " ", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12 text-center">
                                            <a class="btn btn-primary smdata"><i class="fa fa-send"> ยื่นคำร้องขอ</i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-solid bg-green-gradient">
                            <div class="box-header ui-sortable-handle" style="cursor: move;">
                                <i class="fa fa-calendar"></i>

                                <h3 class="box-title">Calendar</h3>
                                <!-- tools box -->
                                <!-- /. tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body no-padding">
                                <!--The calendar -->
                                <div id="calendar"></div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer text-black">
                                <div class="row">
                                    <div class="col-sm-12 text-center">
                                        <h4>จำนวนวันลากิจคงเหลือ</h4>
                                    </div>
                                    <div class="col-sm-12 text-center">
                                        <h4>15 วัน</h4>
                                    </div>
                                    <!-- /.col -->
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src='~/fullcalendar-3.9.0/lib/jquery.min.js'></script>
<script src='~/fullcalendar-3.9.0/fullcalendar.min.js'></script>
<script src="~/fullcalendar-3.9.0/locale/th.js"></script>
<script src="~/fullcalendar-3.9.0/locale-all.js"></script>
<script>

  $(document).ready(function() {

      $('#calendar').fullCalendar({
          defaultDate: "2018-9-1",
          editable: false, // false or true
          eventLimit: true, // allow "more" link when too many events
          lang: 'th'
      });

  });

</script>
<script>
    $(document).on('click', '.smdata', function () {

        swal('Warning','ข้อมูลถูกต้องแล้วใช่หรือไม่ หากถูกต้องแล้ว กรุณากดยืนยันเพื่อส่งคำร้องขอไปยังหัวหน้าแผนก','warning');

    })
</script>