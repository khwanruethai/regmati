        <script src="~/lib/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
        <script src="~/lib/bower_components/select2/dist/js/select2.full.min.js"></script>
        <script src="~/lib/plugins/sweet/sweetalert.min.js"></script>
        <script>


            $('.data_table').DataTable();
            //Date picker
            $('.datepicker').datepicker({
                autoclose: true,
                language: 'th-th',
                format: 'dd/mm/yyyy',
                isBuddhist: true
            });
            $('.select2').select2();

            $(document).keydown(function (event) {
                if (event.keyCode == 123) {
                    return false;
                }
                else if (event.ctrlKey && event.shiftKey && event.keyCode == 73) {
                    return false;
                }
            });

            $(document).on("contextmenu", function (e) {
                e.preventDefault();
            });
        </script>
